/var/log/cron
/var/log/maillog
{
    missingok
    daily
    compress
    rotate 30
    create
    start 0
    postrotate
        ls /var/log/maillog*.gz | xargs -I {} mv {} $(hostname)-{}
        aws s3 mv --sse='AES256' /var/log/ s3://shared-services.eu-west-2.smtplog.ch.gov.uk --recursive --exclude "*" --include "*maillog-*"
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
}
/var/log/messages
/var/log/secure
/var/log/spooler
{
    missingok
    sharedscripts
    postrotate
	/bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
}
